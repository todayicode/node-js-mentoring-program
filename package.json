{
  "name": "node.js-mentoring-program",
  "version": "1.0.0",
  "description": "To make it easy for you to get started with GitLab, here's a list of recommended next steps.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "db:seeder:run": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true npx mikro-orm seeder:run",
    "db:migration:create": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true mikro-orm migration:create",
    "db:migration:create:blank": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true mikro-orm migration:create --blank",
    "db:migration:up": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true mikro-orm migration:up",
    "db:migration:down": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true mikro-orm migration:down",
    "db:migration:fresh": "NODE_OPTIONS='--loader ts-paths-esm-loader/transpile-only --no-warnings' TS_NODE_PREFER_TS_EXTS=true mikro-orm migration:fresh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.12.12",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@mikro-orm/cli": "6.2.6",
    "@mikro-orm/core": "6.2.6",
    "@mikro-orm/migrations": "6.2.6",
    "@mikro-orm/postgresql": "6.2.6",
    "@mikro-orm/reflection": "6.2.6",
    "@mikro-orm/seeder": "6.2.6",
    "@mikro-orm/sqlite": "6.2.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "fastify": "^4.27.0",
    "joi": "^17.12.3",
    "mongoose": "^8.3.2",
    "ts-paths-esm-loader": "^1.4.3",
    "uuid": "^9.0.1",
    "vitest": "^1.6.0"
  }
}
